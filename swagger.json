{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Shape API",
    "description": "API documentation for Shape API",
    "contact": {
      "email": "manassehl9@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "For accessing the API a valid JWT token must be passed in all the queries in the 'Authorization' header."
    }
  },
  "host": "https://shapes-dev.herokuapp.com",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "User",
      "description": "Operation about user"
    },
    {
      "name": "Shape",
      "description": "Shapes calculation and list of user calculations"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/login": {
      "post": {
        "summary": "Login user",
        "tags": [
          "User"
        ],
        "description": "Logs user into the system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Logs user into the system",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login Success",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized user!"
          },
          "404": {
            "description": "No user found"
          },
          "422": {
            "description": "Validation error"
          }
        }
      }
    },
    "/user/signup": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "User"
        ],
        "description": "Register user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Register user",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Registration Successful",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized user!"
          },
          "404": {
            "description": "No user found"
          },
          "422": {
            "description": "Validation error"
          }
        }
      }
    },
    "/calculate/": {
      "post": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Calculate shape",
        "tags": [
          "Shape"
        ],
        "description": "Calculate shape",
        "parameters": [
          {
            "name": "shape",
            "in": "body",
            "description": "Rectangle: dimensions{length: 0, breadth: 0}, Square: dimensions{sideA: 0, sideB: 0}, Triangle: dimensions{length_a: 0, length_b: 0, length_c: 0}, Circle: dimensions{radius: 0}",
            "schema": {
              "$ref": "#/definitions/Shape"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "schema": {
              "$ref": "#/definitions/Shape"
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized user!"
          },
          "404": {
            "description": "No user found"
          },
          "422": {
            "description": "Validation error"
          }
        }
      },
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "View calculations",
        "tags": [
          "Shape"
        ],
        "description": "View calculations",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Calculations",
            "schema": {
              "$ref": "#/definitions/ShapeResponse"
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized user!"
          },
          "404": {
            "description": "No user found"
          },
          "422": {
            "description": "Validation error"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Login": {
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Shape": {
      "properties": {
        "shape": {
          "type": "string"
        },
        "dimensions": {
          "description": "Triangle: parameters{sideA, sideB}, Circle: parameters{radius}",
          "properties": {
            "parameter 1": {
              "type": "integer"
            },
            "parameter 2": {
              "type": "integer"
            },
            "parameter 3": {
              "type": "integer"
            }
          }
        }
      }
    },
    "UserResponse": {
      "properties": {
        "message": {
          "type": "string"
        },
        "data": {
          "type": "object"
        }
      }
    },
    "ShapeResponse": {
      "properties": {
        "message": {
          "type": "string"
        },
        "data": {
          "type": "object"
        }
      }
    }
  }
}