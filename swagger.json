        "securityDefinitions": {
            "Bearer": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header",
                "description": "For accessing the API a valid JWT token must be passed in all the queries in the 'Authorization' header."
            }
        }
    },
    "host": "https://shapes-dev.herokuapp.com",
    "basePath": "/api/v1",
    "tags": [
        {
            "name": "User",
            "description": "API for users in the system"
        },
        {
            "name": "Result",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json"
    ],
